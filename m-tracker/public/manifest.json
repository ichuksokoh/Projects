{
  "manifest_version": 3,
  "version": "1.0",
  "short_name": "Lzyt",
  "name": "Lazy Tracker",
  "description": "A Chrome extension built with React.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Manhwas!",
    "default_icon": {
      "16": "favicon.ico",
      "48": "logo192.png",
      "128": "logo512.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

