{
  "manifest_version": 3,
  "version": "2.0",
  "short_name": "Lzyt",
  "name": "Lazy Tracker",
  "description": "Manga/Manhwa Tracker for all your lazy needs! Please stay on series page initally so Tracker can Store manhwa",
  "action": {
    "default_popup": "index.html",
    "default_title": "Manga/Manhwas!",
    "default_icon": {
      "16": "LazyTrackerSym3.png",
      "48": "LazyTrackerSym2.png",
      "128": "LazyTrackerSym.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://asuracomic.net/*", 
      "http://asuracomic.net/", "https://flamecomics.me/*", "http://flamecomics.me/*",
      "https://www.mangago.me/*", "https://manganato.com/*", "https://reaperscans.com/*",
        "https://chapmanganato.to/*"],
      "js": ["content.js"]
    }
  ]
}

